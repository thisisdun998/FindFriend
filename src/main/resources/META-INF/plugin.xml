<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.thisisdun998.findfriend</id>
    <name>FindFriend</name>
    <vendor>thisisdun998</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.github.thisisdun998.findfriend.toolWindow.MyToolWindowFactory" id="FindFriendChat" anchor="right"/>
        <postStartupActivity implementation="com.github.thisisdun998.findfriend.startup.MyProjectActivity" />
        
        <applicationConfigurable
            parentId="tools"
            instance="com.github.thisisdun998.findfriend.settings.AppSettingsConfigurable"
            id="com.github.thisisdun998.findfriend.settings.AppSettingsConfigurable"
            displayName="FindFriend Settings"/>
            
        <applicationService serviceImplementation="com.github.thisisdun998.findfriend.settings.AppSettingsState"/>
    </extensions>
</idea-plugin>
